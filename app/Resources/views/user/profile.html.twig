{% extends 'base.html.twig' %}

{% block body_id 'profile' %}

{% block main %}
    <section id="contact" class="content-section-log">
    <div class="container">

        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">My Books</h1>
            </div>

            {% for chapter in chapters %}

            <div class="col-lg-3 col-md-4 col-xs-6 thumb">
                <div class="thumbnail">
                    <header>
                        <a href="#">{{ chapter.bookTitle }}</a>
                    </header>
                </div>
            </div>

            {% endfor %}
        </div>

{% endblock %}