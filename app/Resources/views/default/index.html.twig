{% extends 'base.html.twig' %}

    {% block main %}

        <!-- Intro Header -->
        <header class="intro">
            <div class="intro-body">
                <div class="container">
                    <div class="row">
                        <div class="col-md-8 col-md-offset-2">
                            <p class="intro-text"><h1>Writers' friendly corner</h1>
                            <h3>#LoveToRead
                                <a href="#about" class="btn btn-circle page-scroll">
                                    <i class="fa fa-angle-double-down animated"></i>
                                </a>
                            </h3>
                            </p>

                            <div>
                                <a href="{{ path('user_register') }}">
                                    <button class="btn btn-default btn-lg">TRY GRAPHOO</button>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <!-- Start Section -->
        <section id="download" class="content-section text-center">
            <div class="download-section">
                <div class="container">
                    <div class="col-lg-8 col-lg-offset-2">
                        <h2>Recently released</h2>
                        <p>Explore our most popular and critically acclaimed new and future book releases. Editors have selected some of the most exciting new titles to help you find your next great read. Check back here for regular updates, exclusive content from some of your favourite authors, and new recommendations.</p>
                    </div>
                </div>
            </div>
        </section>

        <!-- About Section -->
        <section id="about" class="container content-section text-center">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2">
                    <h2>What is Graphoo?</h2>
                    <p>Find thousands of books to read online.</p>
                    <p>Turn the pages to explore bygone eras, time-honored tales and historical narratives. Adventure awaits.</p>
                    <p>Browse categories to find your favorite literature genres: Romance, Fantasy, Thriller, Short Stories, Young Adult and Children’s Books… </p>
                    <p>There are eBooks for everyone.</p>
                </div>
            </div>
        </section>

{% if not app.user %}
        <!-- Log in/Log out Section -->
        <section id="contact" class="content-section-log">
            <div class="form">

                <ul class="tab-group">
                    <li class="tab active"><a href="#login">Sign In</a></li>
                    <li class="tab"><a href="#signup">Sign Up</a></li>

                </ul>

                <div class="tab-content">

                    <div id="login">
                        <h1>Welcome Back!</h1>

                        <form name="authenticate" action="{{ path('security_login') }}" method="post">

                            <div class="field-wrap">
                                <label for="user_email">
                                    Email Address<span class="req">*</span>
                                </label>
                                <input type="email" id="user_email" name="_username" required autocomplete="off"/>
                            </div>

                            <div class="field-wrap">
                                <label for="password">
                                    Password<span class="req">*</span>
                                </label>
                                <input type="password" id="password" name="_password" required autocomplete="off"/>
                            </div>

                            <div class="forgot"><a href="#">Forgot Password?</a></div>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                            <button class="button button-block">Sign In</button>
                        </form>
                    </div>

                    <div id="signup">
                        <h1>Sign Up for Free</h1>
                        <form action="{{ path('homepage') }}" method="post">
                            <fieldset>
                                <div class="field-wrap">
                                    <label for="user_email">
                                        Email Address<span class="req">*</span>
                                    </label>
                                    <input type="email" required autocomplete="off" id="user_email" name="user[email]">
                                </div>

                                <div class="field-wrap">
                                    <label for="user_fullName">
                                        Full Name<span class="req">*</span>
                                    </label>
                                    <input type="text" id="user_fullName" name="user[fullName]" required autocomplete="off">
                                </div>

                                <div class="field-wrap">
                                    <label for="user_password_first">
                                        Set A Password<span class="req">*</span>
                                    </label>
                                    <input type="password" id="user_password_first" name="user[password][first]" required autocomplete="off">
                                </div>

                                <div class="field-wrap">
                                    <label for="user_password_second">
                                        Confirm The Password<span class="req" >*</span>
                                    </label>
                                    <input type="password" id="user_password_second" name="user[password][second]" required autocomplete="off">
                                </div>

                                <button type="submit" class="button button-block">Get Started</button>
                                {{ form_row(form._token) }}
                            </fieldset>
                        </form>
                    </div>

                </div>
            </div>
        </section>
{% endif %}
    {% endblock %}
