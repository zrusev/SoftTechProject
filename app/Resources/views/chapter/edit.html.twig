{% extends 'base.html.twig' %}

    {% block main %}

        <section class="content-section">

            <div class="container body-content span=8 offset=2">
                <div class=class="container">
                    <div class="row text-left">

                        <form class="form-horizontal" action="{{ path('chapter_edit', {id: chapter.id}) }}" method="POST">
                            <fieldset>
                                <legend><a>Edit Chapter</a></legend>

                                <div class="form-group">
                                    <div class="col-sm-4 ">
                                        <input type="text" class="form-control" id="bookTitle" placeholder="Title" name="chapter[bookTitle]" value="{{ chapter.bookTitle }}">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-sm-6 ">
                                        <input type="text" class="form-control" id="chapterTitle" placeholder="Chapter" name="chapter[chapterTitle]" value="{{ chapter.chapterTitle }}">
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-sm-12">
                                        <textarea class="form-control"  rows="20" id="content" placeholder="Begin to write" name="chapter[content]">{{ chapter.content }}</textarea>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-sm-6 ">
                                        <input type="file" class="form-control" name="chapter[file]">
                                    </div>
                                </div>

                                {{ form_row(form._token) }}

                                <div class="form-group">
                                    <div class="container body-content span=8 offset=2">
                                        <button class="btn btn-default" type="submit" >Submit</button>
                                        <a  class="btn btn-primary-submit" href="{{ app.request.headers.get('referer') }}">Cancel</a>
                                    </div>
                                </div>
                            </fieldset>
                        </form>

                    </div>
                </div>
            </div>
            <script>
                CKEDITOR.replace( 'chapter[content]' );
            </script>

        </section>
    {% endblock %}