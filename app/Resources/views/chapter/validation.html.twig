{% extends 'base.html.twig' %}

{% block main %}
    <section class="container">
        <div class="content-section">
        <h3>The author has the following errors</h3>
        <ul>
            {% for error in errors %}
                <li>{{ error.message }}</li>
            {% endfor %}
        </ul>
        <footer>
            {% if app.user %}
            <div class="pull-left">
                <a class="btn btn-primary-submit btn-lg" href="{{ path('chapter_create') }}">back</a>
            </div>
            {% else %}
                <a class="btn btn-primary-submit btn-lg" href="{{ app.request.headers.get('referer') }}">back</a>
            {% endif %}
        </footer>
        </div>
    </section>
{% endblock %}

